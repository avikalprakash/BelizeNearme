<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="CustomTheme" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@color/cyent_light</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:alertDialogStyle">@style/ProgressDialogTheme</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>

    </style>
</resources>