<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:google="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/background_rect"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="belizenearme.infoservices.lue.belize.WelcomeActivity"
    tools:showIn="@layout/activity_welcome">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        >


        <FrameLayout
            android:id="@+id/page_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"

            >



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            >

            <ImageView
                android:id="@+id/indicator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/circle_fill2" />

            <ImageView
                android:id="@+id/indicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:padding="5dp"
                android:src="@drawable/circle2" />

            <ImageView
                android:id="@+id/indicator3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:padding="5dp"
                android:src="@drawable/circle2" />

            <ImageView
                android:id="@+id/indicator4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:padding="5dp"
                android:src="@drawable/circle2" />
            <ImageView
                android:id="@+id/indicator5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:padding="5dp"
                android:src="@drawable/circle2" />
            <ImageView
                android:id="@+id/indicator6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:padding="5dp"
                android:src="@drawable/circle2" />
            <ImageView
                android:id="@+id/indicator7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:padding="5dp"
                android:src="@drawable/circle2" />
            <ImageView
                android:id="@+id/indicator8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:padding="5dp"
                android:src="@drawable/circle2" />

        </LinearLayout>

        </FrameLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pagern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/page_indicator"
            android:layout_alignParentTop="true" />
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"

            >

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebookSigninBtn"
                android:layout_below="@+id/login"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/blue_round_rect"
                android:layout_centerHorizontal="true"
                android:paddingTop="12dp"
                android:layout_margin="10dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                facebook:com_facebook_login_text="LOGIN WITH FACEBOOK"
                facebook:com_facebook_logout_text="LOG OUT"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/gogoleSigninBtn"
                android:layout_width="match_parent"
                android:layout_below="@+id/btn_fbLogin2"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"


                >

                <Button
                    android:id="@+id/crateAccountBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/button_rect"
                    android:text="@string/create_account" />

                <Button
                    android:id="@+id/signInBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rect"
                    android:text="@string/log_in"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>


    </LinearLayout>

</LinearLayout>
