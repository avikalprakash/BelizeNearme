<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#705572"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="belizenearme.infoservices.lue.belize.Supportjava"
    tools:showIn="@layout/activity_support">

<LinearLayout
    android:id="@+id/address"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="60dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_room_white_48dp"
        android:layout_marginLeft="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6649, PARKROW"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dr. KATHY"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TX-77449"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="@dimen/text_margin">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_contact_mail_white_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="belizenearme585@gmail.com"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="5sp"
            android:paddingTop="@dimen/text_margin"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="@dimen/text_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_call_white_36dp"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="12345678090"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingTop="@dimen/activity_vertical_margin"    />
    </LinearLayout>



</LinearLayout>
